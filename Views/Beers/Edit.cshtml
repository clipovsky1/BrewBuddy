@model BrewBuddy.ViewModels.EditBeerViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Beer</h1>

    <form asp-action="Edit" method="post">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BreweryName">Brewery Name</label>
                    <input asp-for="BreweryName" class="form-control" />
                    <span asp-validation-for="BreweryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SelectedStyleId">Select Beer Style</label>
                    <select asp-for="SelectedStyleId" asp-items="ViewBag.StyleId" class="form-control"></select>
                    <span asp-validation-for="SelectedStyleId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="beerRating" class="form-label">Rating</label>
                    <input asp-for ="Rating" type="range" class="form-range" id="beerRating" min="1" max="5" step="1">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
