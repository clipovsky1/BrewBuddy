@model IEnumerable<BrewBuddy.ViewModels.BeerViewModel>

@{
    ViewData["Title"] = "Beer Log";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Beer Tracker</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Beer Log</h1>

        <div class="col-md-6 offset-md-3">
            <div class="input-group mb-3">
                <input type="text" oninput="liveSearch()" id="searchInput" class="form-control" placeholder="Search...">
            </div>
        </div>

        <div class="text-center">
            <a asp-action="Create" class="btn btn-success mb-4">New Brew</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.BreweryName)</th>
                    <th>@Html.DisplayNameFor(model => model.StyleName)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.BreweryName)</td>
                        <td title="@Html.DisplayFor(modelItem => item.StyleDescription)">
                            @Html.DisplayFor(modelItem => item.StyleName)
                        </td>
                        <td title="@Html.DisplayFor(modelItem => item.Rating)">
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td title="@Html.DisplayFor(modelItem => item.Date)">
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td class="">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
 