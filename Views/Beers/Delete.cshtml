@model BrewBuddy.ViewModels.DeleteBeerViewModel

<h2>Delete Beer</h2>

<form asp-action="Delete" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="BreweryName">Brewery</label>
        <input asp-for="BreweryName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="StyleName">Style</label>
        <input asp-for="StyleName" class="form-control" readonly />
    </div>

    <input asp-for="Id" type="hidden" />

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
