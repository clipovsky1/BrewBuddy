@model BrewBuddy.ViewModels.CreateBeerViewModel

@{
    ViewData["Title"] = "Create Beer";
}

<h2>Create Beer</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BreweryName">Brewery Name</label>
        <input asp-for="BreweryName" class="form-control" />
        <span asp-validation-for="BreweryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedStyleId">Select Beer Style</label>
        <select asp-for="SelectedStyleId" asp-items="ViewBag.BeerStyles" class="form-control"></select>
        <span asp-validation-for="SelectedStyleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" asp-items="ViewBag.Rating" class="form-control"></select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
